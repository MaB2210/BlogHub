@model List<BlogHub.Models.UserModel>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User List</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>User List</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Country</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Userid</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Contactno</td>
                            <td>@user.Country</td>
                            <td>
                                <a href="@Url.Action("UserDetails", "User", new { id = user.Userid })" class="btn btn-info">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("EditUser", "User", new { id = user.Userid })" class="btn btn-warning">Edit</a>
                                    <a href="@Url.Action("DeleteUser", "User", new { id = user.Userid })" class="btn btn-danger">Delete</a>
                                }
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("AddUser", "User")" class="btn btn-primary">Add User</a>
            }
           
            <a href="/" class="btn btn-secondary">Back to Home Page</a>
        </div>
    </div>
</div>
