@model BlogHub.Models.BlogModel

@{
    ViewData["Title"] = "Blog Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-o+RD1LT2p8hOJ4W47f3Fpo5c9lEQVxHj4u9Xm2AuW4ZI&" crossorigin="anonymous">
    <style>
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="content container mt-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Blog")">Blog List</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blog Details</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h2>Blog Details</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="blog-details">
                        <h3>Blog Title: @Model.Title</h3>
                        <h4>Blog Description: @Model.BlogDescription</h4>
                        <h4>Blog ID: @Model.BlogId</h4>
                    </div>
                    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Back to Blog List</a>
                </div>
            </div>
        </div>

       
    </div>
</body>
</html>
